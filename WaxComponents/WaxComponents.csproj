<Project Sdk="Microsoft.NET.Sdk.Razor">

    <PropertyGroup>
        <TargetFramework>net7.0</TargetFramework>
        <Nullable>enable</Nullable>
        <ImplicitUsings>enable</ImplicitUsings>
        <Version>0.2.7</Version>
        <Title>WaxComponents</Title>
        <Authors>lllggghhhaaa</Authors>
        <Description>Simple components for blazor, free and opensource</Description>
        <RepositoryUrl>https://github.com/lllggghhhaaa/WaxComponents</RepositoryUrl>
        <RepositoryType>Git</RepositoryType>
        <PackageTags>Blazor wax ceira pink theme</PackageTags>
        <PackageLicenseUrl>https://licenses.nuget.org/Apache-2.0</PackageLicenseUrl>
        <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
        <LangVersion>11</LangVersion>
    </PropertyGroup>


    <ItemGroup>
        <SupportedPlatform Include="browser" />
    </ItemGroup>

    <ItemGroup>
        <EmbeddedResource Include="wwwroot\**\*" />
        <PackageReference Include="Microsoft.AspNetCore.Components.Web" Version="7.0.0" />
    </ItemGroup>

    <ItemGroup>
      <Folder Include="wwwroot\Images" />
    </ItemGroup>

</Project>
